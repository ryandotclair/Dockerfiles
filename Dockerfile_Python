FROM alpine:3.6
MAINTAINER Ryan Clair <ryan.clair@gmail.com>
LABEL Description="This is a minimum Python3.6.1 image based on alpine:3.6"
LABEL Version="3.6.1"
RUN apk --update add python3 && rm -f /var/cache/apk/* \
    && pip3 install --upgrade pip \
    && pip3 install --upgrade setuptools
ENTRYPOINT /bin/ash
